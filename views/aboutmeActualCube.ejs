    <script>
        function toggleDetails(element) {
            const details = element.querySelector('.timeline-details');
            details.classList.toggle('active');
        }

        function flipCard(card) {
            card.classList.toggle('flipped');
        }

        const images = [
            { src: '/images/virat.jpeg', alt: 'Abstract watercolor painting', caption: 'Art: Bold strokes like my code!' },
            { src: '/images/crab.jpeg', alt: 'Close-up of a flower', caption: 'Photo: Pinching bugs like a pro!' },
            { src: '/images/jack.jpeg', alt: 'Sunset over the ocean', caption: 'Sunset: Jack of all trades vibe!' },
            { src: '/images/ocean.jpeg', alt: 'Pencil sketch of a cityscape', caption: 'Sketch: Lines as clean as my code!' }
        ];
        let currentImageIndex = 0;
        let isDragging = false, startX = 0, cubeRotationY = 0;
        const captions = images.map(img => img.caption);

        function openCube(index) {
            currentImageIndex = index;
            cubeRotationY = -index * 90;
            gsap.to('.cube', { rotationY: cubeRotationY, duration: 0.8, ease: 'power2.out' });
            updateCaption();
            document.getElementById('cube').classList.add('active');
            document.addEventListener('keydown', handleKeydown);
            addDragSupport();
            initParticles();
        }

        function closeCube() {
            document.getElementById('cube').classList.remove('active');
            document.removeEventListener('keydown', handleKeydown);
            document.querySelector('.cube').removeEventListener('mousedown', startDrag);
            document.querySelector('.cube').removeEventListener('touchstart', startTouch);
            document.querySelectorAll('.polaroid-card').forEach(card => card.classList.remove('flipped'));
        }

        function rotateCube(direction) {
            currentImageIndex = (currentImageIndex + direction + images.length) % images.length;
            cubeRotationY -= direction * 90;
            gsap.to('.cube', { rotationY: cubeRotationY, duration: 0.8, ease: 'power2.out' });
            updateCaption();
        }

        function updateCaption() {
            const captionEl = document.getElementById('cube-caption');
            captionEl.textContent = '';
            gsap.fromTo(captionEl, { opacity: 0 }, { opacity: 1, duration: 0.5 });
            captionEl.textContent = captions[currentImageIndex];
        }

        function handleKeydown(event) {
            if (event.key === 'ArrowLeft') rotateCube(-1);
            else if (event.key === 'ArrowRight') rotateCube(1);
            else if (event.key === 'Escape') closeCube();
        }

        function addDragSupport() {
            const cube = document.querySelector('.cube');
            function startDrag(e) {
                isDragging = true;
                startX = e.clientX;
            }
            function startTouch(e) {
                isDragging = true;
                startX = e.touches[0].clientX;
            }
            function drag(e) {
                if (!isDragging) return;
                const clientX = e.clientX || e.touches[0].clientX;
                const deltaX = clientX - startX;
                if (Math.abs(deltaX) > 50) {
                    rotateCube(deltaX < 0 ? 1 : -1);
                    isDragging = false;
                }
                addParticle(clientX, e.clientY || e.touches[0].clientY);
            }
            function endDrag() { isDragging = false; }
            cube.addEventListener('mousedown', startDrag);
            cube.addEventListener('mousemove', drag);
            cube.addEventListener('mouseup', endDrag);
            cube.addEventListener('touchstart', startTouch);
            cube.addEventListener('touchmove', drag);
            cube.addEventListener('touchend', endDrag);
        }

        function initParticles() {
            const canvas = document.getElementById('particle-canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            const particles = [];
            function addParticle(x, y) {
                particles.push({ x, y, size: 5, alpha: 1 });
                if (particles.length > 20) particles.shift();
            }
            function animateParticles() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                particles.forEach(p => {
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                    ctx.fillStyle = `rgba(0, 183, 235, ${p.alpha})`;
                    ctx.fill();
                    p.alpha -= 0.02;
                    p.y -= 1;
                });
                particles.forEach((p, i) => { if (p.alpha <= 0) particles.splice(i, 1); });
                requestAnimationFrame(animateParticles);
            }
            animateParticles();
            window.addEventListener('resize', () => {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            });
            return addParticle;
        }

        const ctx = document.getElementById('skills-chart').getContext('2d');
        new Chart(ctx, {
            type: 'radar',
