    <script>
        function toggleDetails(element) {
            const details = element.querySelector('.timeline-details');
            details.classList.toggle('active');
        }

        function flipCard(card) {
            card.classList.toggle('flipped');
        }

        const images = [
            { src: '/images/virat.jpeg', alt: 'Abstract watercolor painting', caption: 'Art: Bold strokes like my code!' },
            { src: '/images/crab.jpeg', alt: 'Close-up of a flower', caption: 'Photo: Pinching bugs like a pro!' },
            { src: '/images/jack.jpeg', alt: 'Sunset over the ocean', caption: 'Sunset: Jack of all trades vibe!' },
            { src: '/images/ocean.jpeg', alt: 'Pencil sketch of a cityscape', caption: 'Sketch: Lines as clean as my code!' }
        ];
        let currentImageIndex = 0;
        let isDragging = false, startX = 0;

        function updateCarousel() {
            const items = document.querySelectorAll('.carousel-item');
            items.forEach((item, index) => {
                const offset = index - currentImageIndex;
                const angle = offset * 45;
                const translateZ = offset === 0 ? 0 : -200;
                const translateX = offset * 300;
                const scale = offset === 0 ? 1 : 0.7;
                const opacity = offset === 0 ? 1 : 0.5;
                item.style.transform = `translateX(${translateX}px) translateZ(${translateZ}px) rotateY(${angle}deg) scale(${scale})`;
                item.style.opacity = opacity;
                item.classList.toggle('active', offset === 0);
            });
        }

        function openCarousel(index) {
            currentImageIndex = index;
            updateCarousel();
            document.getElementById('carousel').classList.add('active');
            document.addEventListener('keydown', handleKeydown);
            addParallaxEffect();
            addSwipeSupport();
        }

        function closeCarousel() {
            document.getElementById('carousel').classList.remove('active');
            document.removeEventListener('keydown', handleKeydown);
            document.querySelectorAll('.polaroid-card').forEach(card => card.classList.remove('flipped'));
            document.querySelector('.carousel').removeEventListener('mousemove', handleMouseMove);
        }

        function changeImage(direction) {
            currentImageIndex = (currentImageIndex + direction + images.length) % images.length;
            updateCarousel();
        }

        function handleKeydown(event) {
            if (event.key === 'ArrowLeft') changeImage(-1);
            else if (event.key === 'ArrowRight') changeImage(1);
            else if (event.key === 'Escape') closeCarousel();
        }

        function addParallaxEffect() {
            const carousel = document.querySelector('.carousel');
            function handleMouseMove(e) {
                const rect = carousel.getBoundingClientRect();
                const mouseX = e.clientX - rect.left - rect.width / 2;
                const mouseY = e.clientY - rect.top - rect.height / 2;
                const tiltX = (mouseY / rect.height) * 10;
                const tiltY = -(mouseX / rect.width) * 10;
                const activeItem = document.querySelector('.carousel-item.active');
                activeItem.style.transform = `translateX(0) translateZ(0) rotateY(0deg) scale(1) rotateX(${tiltX}deg) rotateY(${tiltY}deg)`;
            }
            carousel.addEventListener('mousemove', handleMouseMove);
        }

        function addSwipeSupport() {
            const carousel = document.querySelector('.carousel');
            carousel.addEventListener('mousedown', (e) => {
                isDragging = true;
                startX = e.clientX;
            });
            carousel.addEventListener('mousemove', (e) => {
                if (isDragging) {
                    const deltaX = e.clientX - startX;
                    if (Math.abs(deltaX) > 50) {
                        changeImage(deltaX < 0 ? 1 : -1);
                        isDragging = false;
                    }
                }
            });
            carousel.addEventListener('mouseup', () => { isDragging = false; });
            carousel.addEventListener('touchstart', (e) => {
                isDragging = true;
                startX = e.touches[0].clientX;
            });
            carousel.addEventListener('touchmove', (e) => {
                if (isDragging) {
                    const deltaX = e.touches[0].clientX - startX;
                    if (Math.abs(deltaX) > 50) {
                        changeImage(deltaX < 0 ? 1 : -1);
                        isDragging = false;
                    }
                }
            });
            carousel.addEventListener('touchend', () => { isDragging = false; });
            carousel.addEventListener('wheel', (e) => {
                e.preventDefault();
                changeImage(e.deltaY > 0 ? 1 : -1);
            });
        }

        const ctx = document.getElementById('skills-chart').getContext('2d');
        new Chart(ctx, {
