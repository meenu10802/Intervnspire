    <section id="networking-section" class="main-topic" style="display: none;">
        <h3>Networking Currents</h3>
        <progress id="networking-progress-bar" value="0" max="100"></progress>
        <p id="networking-progress-text">Progress: 0%</p>
        <a href="/api/questions/challenges/networking"><button>Seek Challenges</button></a>
        <a href="/concepts/networking"><button>Uncover Secrets</button></a>
    </section>

    <section id="webdev-section" class="main-topic" style="display: none;">
        <h3>Web Reefs</h3>
        <progress id="webdev-progress-bar" value="0" max="100"></progress>
        <p id="webdev-progress-text">Progress: 0%</p>
        <a href="/api/questions/challenges/webdev"><button>Seek Challenges</button></a>
        <a href="/concepts/webdev"><button>Uncover Secrets</button></a>
    </section>

    <section id="programming-section" class="main-topic" style="display: none;">
        <h3><%= programmingLanguage %> Waves</h3>
        <progress id="programming-progress-bar" value="0" max="100"></progress>
        <p id="programming-progress-text">Progress: 0%</p>
        <a href="/api/questions/challenges/programming"><button>Seek Challenges</button></a>
        <a href="/concepts/programming"><button>Uncover Secrets</button></a>
    </section>

    <script>
        const userId = '<%= userId %>';
        const programmingLanguage = '<%= programmingLanguage %>';
        function getUserId() { return userId; }
    </script>
    <script src="/js/script.js"></script>
</body>
</html>